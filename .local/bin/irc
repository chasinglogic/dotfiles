#!/bin/bash
# vi: ft=sh
# Do a cool tmux integrated irc window management thing


tmux has-session -t "irc"
if [ $? != 0 ]; then
    echo "Starting IRC tmux session..."
    tmux new-session -d -s "irc" "tmux new-window -n irc weechat"
    sleep 2
fi

if [[ $TMUX != "" ]]; then
    tmux link-window -s irc:irc -t 9
else
    tmux attach -t "irc"
fi
