#!/usr/bin/env bash

if [[ -z "$*" ]]; then
    echo "Must provide a command to run."
    exit 1
fi

"$@"

TITLE="Command completed"
MESSAGE="$* is done"

if [[ "$(uname)" == "Darwin" ]]; then
    osascript -e "display notification \"$MESSAGE\" with title \"$TITLE\""
else
    notify-send "$TITLE" "$MESSAGE"
fi
