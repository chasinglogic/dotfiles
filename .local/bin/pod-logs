#!/usr/bin/env bash

all=0
number=1
while getopts ':n:a' flag; do
  case "$flag" in
    a) all=1;;
    n) number=$OPTARG;;
    \?) exit 42;;
  esac
done

shift $((OPTIND - 1))

search=$1
shift;

if [[ $all != 0 ]]; then
  pods=$(find-pod $search)
  files=""
  procs=()
  for pod in $pods; do
    file=/tmp/$pod.log
    kubectl logs -f $pod | sed "s/^/$pod: /;" > $file &
    procs+=($!)
    files+=" $file"
  done
  tail -f $files
  killall $procs
else
  kubectl logs -f $(find-pod -n $number -l $search)
fi
