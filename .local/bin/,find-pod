#!/bin/bash

number=1
while getopts ':lvn:' flag; do
  case "$flag" in
    l) limit=1;;
    v) verbose=1;;
    \?) exit 42;;
  esac
done

shift $((OPTIND - 1))

search="${@: -1}"
kubectl_flags=${*%${!#}}
shift;

pods=$(kubectl get pods $kubectl_flags)
header=$(echo "$pods" | head -n1)
body=$(echo "$pods" | grep -v NAME | grep $search)
if [[ -n $verbose ]]; then
  echo "$header"
else
  body=$(echo "$body" | awk '{ print $1 }')
fi
