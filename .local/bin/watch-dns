#!/usr/bin/env bash

domain=$1
expected_ip=$2

until nslookup $domain | grep $expected_ip
do
    echo "Trying again..."
    sleep 2
done


TITLE="DNS Updated"
MESSAGE="$domain now points to $expected_ip"

if [[ "$(uname)" == "Darwin" ]]; then
    osascript -e "display notification \"$MESSAGE\" with title \"$TITLE\""
else
    notify-send "$TITLE" "$MESSAGE"
fi
