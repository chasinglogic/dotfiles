#!/bin/bash

# This script is used to remove excluded directories from my backups.

echo "Cleaning backup..."
EXCLUDED_DIRS=(
    "*/$USER/.Trash"
    "*/$USER/.ansible"
    "*/$USER/.battlescribe"
    "*/$USER/.bundle"
    "*/$USER/.cache"
    "*/$USER/.cargo"
    "*/$USER/.chef"
    "*/$USER/.cookiecutter_replay"
    "*/$USER/.cookiecutters"
    "*/$USER/.cups"
    "*/$USER/.dotnet"
    "*/$USER/.gem"
    "*/$USER/.gradle"
    "*/$USER/.gsutil"
    "*/$USER/.hawtjni"
    "*/$USER/.ipynb_checkpoints"
    "*/$USER/.ipython"
    "*/$USER/.java-caller"
    "*/$USER/.jupyter"
    "*/$USER/.jx"
    "*/$USER/.kube"
    "*/$USER/.local/share"
    "*/$USER/.matplotlib"
    "*/$USER/.minikube"
    "*/$USER/.mysql_history"
    "*/$USER/.npm"
    "*/$USER/.nuget"
    "*/$USER/.asdf"
    "*/$USER/.elixir-ls"
    "*/$USER/.nvm"
    "*/$USER/.pyenv"
    "*/$USER/.rbenv"
    "*/$USER/.redhat"
    "*/$USER/.runelite"
    "*/$USER/.rustup"
    "*/$USER/.vs-kubernetes"
    "*/$USER/.vscode"
    "*/$USER/.config/Code"
    "*/$USER/Code/go"
    "*/$USER/Desktop"
    "*/$USER/Downloads"
    "*/$USER/Dropbox"
    "*/$USER/Library"
    "*/$USER/Movies/iMovie\ Library.imovielibrary"
    "*/$USER/Movies/iMovie\ Theater.theater"
    "*/$USER/Pictures"
    "*/$USER/Code/neovim/.deps"
    "*/$USER/Code/neovim/build"
    "*/$USER/Work"
    '*/tmp/cache'
    "*/$USER/snap/firefox/common/.cache"
)

for dir in "${EXCLUDED_DIRS[@]}"; do
    found=$(find $1 -type d -wholename "$dir")
    if [[ "$found" == "" ]]; then
        continue
    fi

    echo "for $dir found: $found, deleting."
    rm -rf "$found"
done

exit $?
