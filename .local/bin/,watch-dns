#!/usr/bin/env bash

domain=$1
expected_ip=$2
dns_server=${3:-""}

ARGS=()
if [ "${dns_server}" != "" ]; then
	ARGS+=("@${dns_server}")
fi

ARGS+=("$domain")

until dig "${ARGS[@]}" | grep "$expected_ip"; do
	echo "Trying again..."
	sleep 2
done

TITLE="DNS Updated"
MESSAGE="$domain now points to $expected_ip"

if [[ "$(uname)" == "Darwin" ]]; then
	osascript -e "display notification \"$MESSAGE\" with title \"$TITLE\""
else
	notify-send "$TITLE" "$MESSAGE"
fi
