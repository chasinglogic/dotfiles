#!/usr/bin/env bash

OS=$(uname -s)
if [[ "$OS" == "Darwin" ]]; then
    OS="macos"
fi
OS=$(echo "$OS" | awk '{print tolower($0)}')

ARCH=$(uname -m)
if [[ "$ARCH" == "x86_64" || "$ARCH" == "amd64" ]]; then
    ARCH="x64"
fi

curl "https://mise.jdx.dev/mise-latest-$OS-$ARCH" > "$HOME/.local/bin/mise"
