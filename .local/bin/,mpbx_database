#!/usr/bin/env bash

INSTANCE=$1
if [[ -z "$INSTANCE" ]]; then
    INSTANCE="default"
fi

NAME="mpbx-$INSTANCE-db"

if [[ -n $(docker container list -a | grep $NAME) ]]; then
    docker container start $NAME
else
    docker run \
        --name mpbx-$1-db \
        -v mpbx-$1-data:/var/lib/mysql \
        -e MYSQL_ROOT_PASSWORD=root \
        -e MYSQL_DATABASE=mpb \
        --publish 3306:3306 \
        mysql:5.7
fi
