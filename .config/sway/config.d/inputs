# vi: ft=swayconfig

### Input configuration
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

input "type:keyboard" {
    xkb_options ctrl:nocaps
}

# Enable common options for generic touchpads
input "type:touchpad" {
  tap enabled
  natural_scroll enabled
  middle_emulation enabled
}

input "type:mouse" {
    natural_scroll enabled
}

# this mouse is crazy sensitive
input "6940:6972:Corsair_Corsair_Gaming_HARPOON_RGB_Mouse" {
    natural_scroll enabled
    scroll_factor 0.5

    accel_profile "flat"
    pointer_accel 0.00000000001
}

